<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".nueva_oferta">

    <LinearLayout
        android:id="@+id/lineLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/IdProducto"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="45dp"
                android:hint="Producto"
                android:background="@drawable/border_negro"  ></EditText>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnBuscar"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/buscar">

            </androidx.appcompat.widget.AppCompatImageButton>
        </LinearLayout>

        <Spinner
            android:id="@+id/spinner_super"
            android:layout_width="match_parent"
            android:layout_height="54dp"></Spinner>

        <EditText
            android:id="@+id/Id_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="Precio del producto"></EditText>

        <EditText
            android:id="@+id/Id_cant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="Cantidad para la oferta">
        </EditText>
        <Button
            android:id="@+id/IdGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:text="Guardar"></Button>

    </LinearLayout>

    <TextView
        android:id="@+id/Idusuario"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="usuario"
        android:textSize="20dp"></TextView>

</FrameLayout>