<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/fl"
    tools:context=".ListaMercaderia">


    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/mustardo"
        android:text="Lista de Mercaderia"
        android:textColor="#1D0651"
        android:textSize="30dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="65dp"
        android:background="#440FD3"></View>

    <androidx.appcompat.widget.SearchView
           android:id="@+id/sv1"
           android:layout_width="280dp"
           android:layout_height="wrap_content"
           android:layout_marginTop="115dp"
           android:background="@drawable/border_negro">
       </androidx.appcompat.widget.SearchView>

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/idlistView"
      android:layout_width="match_parent"
      android:layout_height="300dp"
      android:footerDividersEnabled="true"
    android:clickable="true"
    android:layout_marginTop="200dp">
</androidx.recyclerview.widget.RecyclerView>


    <Button
        android:id="@+id/btnFiltrar"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:background="#6F96BF"
        android:layout_marginStart="30dp"
        android:layout_marginTop="550dp"
        android:text="Filtrar"></Button>

    <Button
        android:id="@+id/btnbuscar"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginStart="200dp"
        android:background="#6F96BF"
        android:layout_marginTop="550dp"
        android:text="Buscar"></Button>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="750dp"
        android:background="#7029AF"
        app:menu="@menu/bottom_menu">

    </com.google.android.material.bottomnavigation.BottomNavigationView>


</FrameLayout>