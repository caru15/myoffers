<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7EDF1"
    android:padding="5dp"
    android:id="@+id/cl1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kilometros a la redonda"
        android:textSize="20dp"
        android:textStyle="italic"
        tools:ignore="MissingConstraints">
    </TextView>

    <RadioGroup
        android:id="@+id/rdioGr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        tools:layout_editor_absoluteX="350dp"
        tools:layout_editor_absoluteY="350dp"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:text="1 KM"></RadioButton>
        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:text="2 KM"></RadioButton>
        <RadioButton
            android:id="@+id/rb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:text="3 KM"></RadioButton>
        <RadioButton
            android:id="@+id/rb4"
            android:layout_width="wrap_content"
            android:layout_margin="0dp"
            android:layout_height="wrap_content"
            android:text="MÃ¡s de 3 KM"></RadioButton>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_margin="0dp"
            android:text="Aceptar"
            android:textSize="10dp"
            android:id="@+id/btnOk"
            tools:ignore="MissingConstraints"></Button>
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>