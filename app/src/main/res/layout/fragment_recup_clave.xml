<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:background="#253E3C"
    tools:context=".recupClave">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_conte"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        apps:cardBackgroundColor="#FFFFFF"
        android:layout_margin="30dp"
        apps:cardCornerRadius="20dp"
        apps:cardElevation="5dp"
        apps:contentPadding="10dp">
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="200dp"
        android:paddingLeft="50dp"
        android:layout_marginRight="20dp">
        <TextView
            android:id="@+id/txtDni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingrese su DNI:"
            android:fontFamily="sans-serif-black"
            android:textSize="30dp"/>

        <EditText
            android:id="@+id/txtDni1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            />
        <Button
            android:id="@+id/btnOK1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:text="Siguiente"
            android:background="@drawable/borde_btn"
            />

    </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>